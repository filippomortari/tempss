<IncompressibleNavierStokes>
    <Physics>
        <KinematicViscosity>0.01</KinematicViscosity>
    </Physics>
    <ProblemSpecification>
        <SolutionMethod>VelocityCorrectionScheme</SolutionMethod>
        <AdvectionForm>Convective</AdvectionForm>
        <GeometryAndBoundaryConditions>
            <Geometry>CylinderGeometry.xml</Geometry>
            <BoundaryCondition>
                <Comment>Wall</Comment>
                <u>
                    <Type>D</Type>
                    <Value>0</Value>
                    <UserDefinedType>NotProvided</UserDefinedType>
                </u>
                <v>
                    <Type>D</Type>
                    <Value>0</Value>
                    <UserDefinedType>NotProvided</UserDefinedType>
                </v>
                <p>
                    <Type>N</Type>
                    <Value>0</Value>
                    <UserDefinedType>H</UserDefinedType>
                </p>
            </BoundaryCondition>
            <BoundaryCondition>
                <Comment>Far field</Comment>
                <u>
                    <Type>D</Type>
                    <Value>1</Value>
                    <UserDefinedType>NotProvided</UserDefinedType>
                </u>
                <v>
                    <Type>D</Type>
                    <Value>0</Value>
                    <UserDefinedType>NotProvided</UserDefinedType>
                </v>
                <p>
                    <Type>N</Type>
                    <Value>0</Value>
                    <UserDefinedType>H</UserDefinedType>
                </p>
            </BoundaryCondition>
            <BoundaryCondition>
                <Comment>Outlet</Comment>
                <u>
                    <Type>N</Type>
                    <Value>0</Value>
                    <UserDefinedType>NotProvided</UserDefinedType>
                </u>
                <v>
                    <Type>N</Type>
                    <Value>0</Value>
                    <UserDefinedType>NotProvided</UserDefinedType>
                </v>
                <p>
                    <Type>D</Type>
                    <Value>0</Value>
                    <UserDefinedType>NotProvided</UserDefinedType>
                </p>
            </BoundaryCondition>
        </GeometryAndBoundaryConditions>
        <InitialConditions>
            <u>1</u>
            <v>0</v>
            <p>0</p>
        </InitialConditions>
        <Expansion>
            <PolynomialOrder>7</PolynomialOrder>
            <BasisType>MODIFIED</BasisType>
        </Expansion>
        <FinalTime>10</FinalTime>
        <TimeStep>0.01</TimeStep>
    </ProblemSpecification>
    <NumericalAlgorithm>
        <Projection>ContinuousGalerkin</Projection>
        <TimeIntegration>
            <TimeIntegrationMethod>IMEXOrder1</TimeIntegrationMethod>
            <DiffusionAdvancement>Implicit</DiffusionAdvancement>
        </TimeIntegration>
        <MatrixInversion>
            <Iterative>
                <SubStructuring>StaticCondensation</SubStructuring>
                <Preconditioner>Diagonal</Preconditioner>
                <SuccessiveRHS>true</SuccessiveRHS>
                <IterativeSolverTolerance>1e-05</IterativeSolverTolerance>
            </Iterative>
        </MatrixInversion>
        <GlobalOptimizationParameters>
            <BackwardTransform>
                <ElementalEvaluation>
                    <Triangles>LocalMatrix</Triangles>
                    <Quadrilaterals>LocalMatrix</Quadrilaterals>
                </ElementalEvaluation>
            </BackwardTransform>
            <InnerProductWRTBase>
                <ElementalEvaluation>
                    <Triangles>LocalMatrix</Triangles>
                    <Quadrilaterals>LocalMatrix</Quadrilaterals>
                </ElementalEvaluation>
            </InnerProductWRTBase>
            <MassMatrixOp>
                <ElementalEvaluation>
                    <Triangles>SumFactorization</Triangles>
                    <Quadrilaterals>SumFactorization</Quadrilaterals>
                </ElementalEvaluation>
            </MassMatrixOp>
            <HelmholtzMatrixOp>
                <ElementalEvaluation>
                    <Triangles>SumFactorization</Triangles>
                    <Quadrilaterals>SumFactorization</Quadrilaterals>
                </ElementalEvaluation>
            </HelmholtzMatrixOp>
        </GlobalOptimizationParameters>
    </NumericalAlgorithm>
    <Admin>
        <IO_CheckSteps>10</IO_CheckSteps>
        <IO_InfoSteps>1</IO_InfoSteps>
    </Admin>
</IncompressibleNavierStokes>
